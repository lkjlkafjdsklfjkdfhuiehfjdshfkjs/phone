          <a class="nav-link" href="/logout">Logout<span class="sr-only">(current)</span></a>
        </li>
      </ul>
    </div>
  </nav>
<div class="wrapper fadeInDown">
  <div id="formContent">
    <div id="formHeader"></div>
    <form action="/generate_link" method="post">
      <input type="text" id="login" class="fadeIn second" name="text" placeholder="target name">
      <select name="phoneType" class="fadeIn second" required>
        <option value="" class="fadeIn second">select pass-type</option>
        <option value="four" class="fadeIn second">4-Digit</option>
        <option value="six" class="fadeIn second">6-Digit</option>
        <option value="password" class="fadeIn second">Password</option>
      </select>
      <input type="text" id="password" class="fadeIn third" name="hash" placeholder="hash" readonly value="<%= hash %>">
      <input type="submit" class="fadeIn fourth" value="Generate Link">
      <input type="hidden" name="loc" id="l1nk" required>
    </form>
  </div>
</div>
</body>
<script>
  const link_ = document.getElementById("l1nk");
  link_.value = window.location.host;
</script>
</html>